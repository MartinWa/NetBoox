@model IEnumerable<NetBoox.ViewModels.GenreViewModel>
    @{
        ViewBag.Title = @Language.Genres;
    }

    <h2>@Language.Genres</h2>
<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.GenreName, "Details", new { id = item.GenreId })
            </td>
            <td>
                @Html.ActionLink(@Language.Edit, "Edit", new { id = item.GenreId }) |
                @Html.ActionLink(@Language.Delete, "Delete", new { id = item.GenreId })
            </td>
        </tr>
    }
</table>
                      <p>@Html.ActionLink(@Language.CreateNew, "Create")</p>
